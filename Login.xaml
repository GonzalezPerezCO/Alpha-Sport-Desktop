<Window x:Class="Deportes_WPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deportes_WPF"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" FontSize="14" Background="DarkRed">
    <Border Background="White" CornerRadius="20" Margin="20">
        <StackPanel Margin="10">
            <Label Content="Login" Foreground="Black" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Usuario" Foreground="Black"></Label>
            <TextBox Name="txt1" Foreground="Black" Background="LightGray" FontSize="18"/>
            <Label Content="Contraseña" Foreground="Black"></Label>
            <PasswordBox Name="txt2" Foreground="Black" Background="LightGray" FontSize="18"></PasswordBox>
            <Button Name="btn1" Content="enviar" Margin="60 10" Foreground="Black" Background="LightGray"></Button>
        </StackPanel>
    </Border>
</Window>
