<Window x:Class="AlphaSport.Vista.VentanaAdminImpl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ventanaAdminImpl"        
        WindowStyle="None"  Height="600" Width="500" Closed="Window_Closed" Closing="Window_Closing">
    <Grid>
        <Label Content="Nombre Impl Depotivo" HorizontalAlignment="Left" Margin="28,229,0,329" VerticalAlignment="Center" Width="266" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Impl Deportivo" HorizontalAlignment="Right" Margin="0,402,25,145" VerticalAlignment="Center" Width="137" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="45"/>
        <Label Content="Cantidad" HorizontalAlignment="Right" Margin="0,223,25,323" VerticalAlignment="Center" Width="122" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="46"/>
        <ComboBox x:Name="cmbox_Sigla" HorizontalAlignment="Right" Margin="0,464,25,95" VerticalAlignment="Center" Width="137" Height="33" FontSize="18" RenderTransformOrigin="1.034,0.603" SelectionChanged="Cmbox_Sigla_SelectionChanged" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn4" Content="Limpiar" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="74" Click="Btn4_Click" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.704,0.163"/>
        <TextBox x:Name="input_nombre" HorizontalAlignment="Left" Height="33" Margin="28,274,0,285" TextWrapping="Wrap" VerticalAlignment="Center" Width="266" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="50" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.328,0.581"/>
        <Button x:Name="btn2" Content="Cancelar" HorizontalAlignment="Right" Margin="0,0,10,10" Width="212" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Height="34" FontSize="18" Click="Btn2_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn1" Content="Agregar" HorizontalAlignment="Left" Margin="10,0,0,10" Width="212" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Height="34" FontSize="18" Click="Btn1_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <CheckBox x:Name="chbox_nuevo" Content="Eliminar Impl" HorizontalAlignment="Left" Margin="28,431,0,117" VerticalAlignment="Center" RenderTransformOrigin="-2.579,0.164" FontWeight="Bold" FontSize="18" Height="44" Width="159" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" Click="Chbox_Click"/>
        <CheckBox x:Name="chbox_eliminar" Content="Añadir nuevo" HorizontalAlignment="Left" Margin="28,121,0,423" VerticalAlignment="Center" RenderTransformOrigin="-1.439,5.154" FontWeight="Bold" FontSize="18" Height="48" Width="159" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" Click="Chbox_Click"/>
        <TextBox x:Name="input_sigla" HorizontalAlignment="Right" Height="33" Margin="0,274,25,285" TextWrapping="Wrap" VerticalAlignment="Center" Width="122" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="10" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.332,1.045"/>
        <Label Content="SIGLA" HorizontalAlignment="Right" Margin="0,110,25,436" VerticalAlignment="Center" Width="122" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="46"/>
        <TextBox x:Name="input_sigla_nueva" HorizontalAlignment="Right" Height="32" Margin="0,161,25,399" TextWrapping="Wrap" VerticalAlignment="Center" Width="122" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="5" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.328,0.581"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="8" Margin="10,373,10,211" VerticalAlignment="Center" Width="472"/>
    </Grid>
</Window>
