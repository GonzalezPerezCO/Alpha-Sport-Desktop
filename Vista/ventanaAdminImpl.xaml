<Window x:Class="AlphaSport.Vista.VentanaAdminImpl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ventanaAdminImpl"        
        WindowStyle="None"  Height="600" Width="500" Closed="Window_Closed" Closing="Window_Closing">
    <Grid>
        <Label Content="Nombre Impl Depotivo" HorizontalAlignment="Left" Margin="23,171,0,0" VerticalAlignment="Top" Width="439" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Impl Deportivo" HorizontalAlignment="Left" Margin="23,315,0,0" VerticalAlignment="Top" Width="137" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="45"/>
        <Label Content="Cantidad" HorizontalAlignment="Right" Margin="0,315,30,232" VerticalAlignment="Center" Width="122" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="45"/>
        <ComboBox x:Name="cmbox_Sigla" HorizontalAlignment="Left" Margin="23,364,0,0" VerticalAlignment="Top" Width="137" Height="33" FontSize="18" RenderTransformOrigin="1.034,0.603" SelectionChanged="Cmbox_Sigla_SelectionChanged" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn4" Content="Limpiar" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="74" Click="Btn4_Click" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.704,0.163"/>
        <TextBox x:Name="input_nombre" HorizontalAlignment="Left" Height="42" Margin="23,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="439" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="50" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.328,0.581"/>
        <Button x:Name="btn2" Content="Cancelar" HorizontalAlignment="Right" Margin="0,0,10,10" Width="212" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Height="34" FontSize="18" Click="Btn2_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn1" Content="Agregar" HorizontalAlignment="Left" Margin="10,0,0,10" Width="212" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Height="34" FontSize="18" Click="Btn1_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <CheckBox x:Name="chbox_nuevo" Content="Eliminar Impl" HorizontalAlignment="Right" Margin="0,83,21,465" VerticalAlignment="Center" RenderTransformOrigin="-2.579,0.164" FontWeight="Bold" FontSize="18" Height="44" Width="159" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" Click="Chbox_Click"/>
        <CheckBox x:Name="chbox_eliminar" Content="Añadir nuevo" HorizontalAlignment="Left" Margin="23,80,0,464" VerticalAlignment="Center" RenderTransformOrigin="-1.439,5.154" FontWeight="Bold" FontSize="18" Height="48" Width="159" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" Click="Chbox_Click"/>
        <TextBox x:Name="input_sigla" HorizontalAlignment="Left" Height="33" Margin="340,364,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="10" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.328,0.581"/>
        <TextBlock HorizontalAlignment="Center"  VerticalAlignment="Bottom" Margin="47,0,62,98" Height="59" TextWrapping="Wrap" FontSize="18" Width="383" TextAlignment="Center"><Run Text="Sí, va a eliminar un implemento deporitvo, no tiene que usar el campo Cantidad."/></TextBlock>
    </Grid>
</Window>
