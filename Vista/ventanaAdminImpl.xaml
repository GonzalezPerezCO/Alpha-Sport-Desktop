<Window x:Class="AlphaSport.Vista.VentanaAdminImpl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ventanaAdminImpl"        
        WindowStyle="None"  Height="600" Width="500" Closed="Window_Closed" Closing="Window_Closing">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="8" Margin="10,373,10,211" VerticalAlignment="Center" Width="472"/>
        <Button x:Name="btn4" Content="Limpiar" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="74" Click="Btn4_Click" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.534,0.571"/>
        <Button x:Name="btn2" Content="Cancelar" HorizontalAlignment="Right" Margin="0,0,10,10" Width="212" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Height="34" FontSize="18" Click="Btn2_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn1" Content="Agregar" HorizontalAlignment="Left" Margin="10,0,0,10" Width="212" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Height="34" FontSize="18" Click="Btn1_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <CheckBox x:Name="chbox_eliminar" Content="Eliminar Impl" Margin="10,460,323,88" VerticalAlignment="Center" RenderTransformOrigin="0.506,0.602" FontWeight="Bold" FontSize="18" Height="44" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" Click="Chbox_Click_eliminar"/>
        <CheckBox x:Name="chbox_nuevo" Content="Añadir nuevo" HorizontalAlignment="Left" Margin="10,67,0,477" VerticalAlignment="Center" RenderTransformOrigin="0.497,0.583" FontWeight="Bold" FontSize="18" Height="48" Width="159" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" Click="Chbox_Click_nuevo"/>
        <Label Content="Nombre Impl Depotivo" HorizontalAlignment="Center" Margin="10,149,10,409" VerticalAlignment="Center" Width="472" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="34"/>
        <Label Content="Impl Deportivo" HorizontalAlignment="Center" Margin="329,406,26,142" VerticalAlignment="Center" Width="137" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="44"/>
        <Label Content="Cantidad" HorizontalAlignment="Right" Margin="-293,426,663,132" VerticalAlignment="Center" Width="122" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="34"/>
        <ComboBox x:Name="cmbox_Sigla" HorizontalAlignment="Center" Margin="329,472,26,88" VerticalAlignment="Center" Width="137" Height="32" FontSize="18" RenderTransformOrigin="1.034,0.603" SelectionChanged="Cmbox_Sigla_SelectionChanged" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="input_sigla" HorizontalAlignment="Right" Height="31" Margin="-293,479,663,82" TextWrapping="Wrap" VerticalAlignment="Center" Width="122" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="10" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.332,1.045" CharacterCasing="Upper"/>
        <Label Content="SIGLA" HorizontalAlignment="Left" Margin="-283,373,0,184" VerticalAlignment="Center" Width="75" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="35"/>
        <TextBox x:Name="input_sigla_nueva" HorizontalAlignment="Right" Height="35" Margin="-142,373,512,184" TextWrapping="Wrap" VerticalAlignment="Center" Width="122" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="5" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.045,0.586" CharacterCasing="Upper"/>
        <TextBox x:Name="input_nombre" HorizontalAlignment="Right" Height="31" Margin="0,188,10,373" TextWrapping="Wrap" VerticalAlignment="Center" Width="472" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="50" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.332,1.045" CharacterCasing="Upper"/>
    </Grid>
</Window>
