<Window x:Class="Deportes_WPF.Vista.agregarEstud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deportes_WPF.Vista"
        mc:Ignorable="d"
        Title="agregarEstud" Width="1366" Height="768"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow" Closed="Window_Closed" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1048*"/>
            <ColumnDefinition Width="311*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lab1" Content="Nombre del Proyecto" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="489,7,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="36"/>
        <Label x:Name="lab2" Content="Agregar Estudiante al Gimnasio" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="495,112,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.013,-0.288" FontWeight="Bold" FontSize="24"/>
        <Button Content="Volver" HorizontalAlignment="Left" Margin="185.5,50,0,0" VerticalAlignment="Top" Width="76" Grid.Column="1" Click="Button_Click_2"/>
        <Button Content="Guardar" HorizontalAlignment="Left" Margin="489,679,0,0" VerticalAlignment="Top" Width="101" FontWeight="Bold" FontSize="16" Click="Button_Click_1" Height="43">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
            </Button.Background>
        </Button>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="727,679,0,0" VerticalAlignment="Top" Width="101" FontWeight="Bold" FontSize="16" Click="Button_Click" Height="43" Background="#FFD36D19"/>

    </Grid>
</Window>
