<Window x:Class="AlphaSport.Vista.VentanaPrestamosImpl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ventanaPrestamosImpl" 
        WindowStyle="None"  Height="600" Width="500" Closed="Window_Closed" Closing="Window_Closing" IsVisibleChanged="Window_IsVisibleChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn1" Content="Agregar" HorizontalAlignment="Left" Margin="10,0,0,10" Width="222" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Height="34" FontSize="18" Click="Btn1_Click"/>
        <TextBox x:Name="codigo" HorizontalAlignment="Left" Height="45" Margin="38,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="11" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Número de carnet" HorizontalAlignment="Left" Margin="38,28,0,0" VerticalAlignment="Top" Width="185" FontSize="18"/>
        <Button x:Name="btn2" Content="Cancelar" HorizontalAlignment="Left" Margin="28,0,0,10" Width="222" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Height="34" FontSize="18" Grid.Column="1" Click="Btn2_Click"/>
        <Label Content="Codigo Impl Deportivo" HorizontalAlignment="Left" Margin="38,254,0,0" VerticalAlignment="Top" Width="200" FontSize="18" Grid.ColumnSpan="2"/>
        <Label Content="Cantidad" HorizontalAlignment="Right" Margin="0,254,47,304" VerticalAlignment="Center" Width="133" FontSize="18" Grid.Column="1"/>
        <ComboBox x:Name="cmbox_Cant" HorizontalAlignment="Right" Margin="0,304,58,242" VerticalAlignment="Center" Width="122" Height="46" FontSize="18" RenderTransformOrigin="1.034,0.603" SelectionChanged="Cmbox_Cant_SelectionChanged" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1"/>
        <ComboBox x:Name="cmbox_Sigla" HorizontalAlignment="Left" Margin="38,304,0,0" VerticalAlignment="Top" Width="137" Height="46" FontSize="18" RenderTransformOrigin="1.034,0.603" SelectionChanged="Cmbox_Sigla_SelectionChanged" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn3" Content="Buscar" HorizontalAlignment="Right" Margin="0,71,58,476" VerticalAlignment="Center" Width="150" Height="45" FontWeight="Bold" FontSize="18" Click="Btn3_Click" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn4" Content="nuevo" HorizontalAlignment="Right" Margin="0,31,58,0" VerticalAlignment="Top" Width="74" Click="Btn4_Click" Grid.Column="1" FontSize="18"/>
        <CheckBox x:Name="chbox_dev" Content="Devolución" HorizontalAlignment="Right" Margin="0,177,34,378" VerticalAlignment="Center" RenderTransformOrigin="-2.579,0.164" FontWeight="Bold" FontSize="18" Height="37" Width="159" Checked="Chbox_Checked_dev" Grid.Column="1"/>
        <CheckBox x:Name="chbox_pres" Content="Prestamo" HorizontalAlignment="Left" Margin="38,177,0,378" VerticalAlignment="Center" RenderTransformOrigin="-2.579,0.164" FontWeight="Bold" FontSize="18" Height="37" Width="159" Checked="Chbox_Checked_pres"/>
        <TextBox x:Name="obs1" HorizontalAlignment="Center" Height="62" Margin="15,468,5,62" TextWrapping="Wrap" VerticalAlignment="Center" Width="472" FontWeight="Bold" FontSize="18" MaxLines="1" MaxLength="500" TextOptions.TextHintingMode="Fixed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="1.256,4.501" Grid.ColumnSpan="2"/>
        <Label Content="Observaciones:" HorizontalAlignment="Left" Margin="15,425,0,133" VerticalAlignment="Center" Width="226" FontSize="18" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
