        xmlns:local="clr-namespace:Deportes_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="401*"/>
            <ColumnDefinition Width="391*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lab1" Content="Usuario" HorizontalAlignment="Center" Margin="22,241,292,142" VerticalAlignment="Center" Grid.Column="1" Height="36" FontWeight="Bold" Width="77"/>
        <Label x:Name="lab2" Content="Contraseña" HorizontalAlignment="Center" Margin="22,296,292,88" VerticalAlignment="Center" Grid.Column="1" Height="35" FontWeight="Bold" Width="77"/>
        <TextBox x:Name="text1" HorizontalAlignment="Center" Height="31" Margin="108,241,44,142" TextWrapping="Wrap" Text="usuario" VerticalAlignment="Center" Width="239" Grid.Column="1" TextAlignment="Center" BorderThickness="3" ClipToBounds="True" ForceCursor="True"/>
        <Button x:Name="btn1" Content="enviar" HorizontalAlignment="Center" Margin="108,357,169,19" VerticalAlignment="Center" Width="114" Grid.Column="1" Height="43" ClipToBounds="True" Click="btn1_Click"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="45,154,0,0" VerticalAlignment="Top" Width="100" Source="fit.ico"/>
        <Button x:Name="btn1_Copy" Content="enviar" HorizontalAlignment="Center" Margin="227,357,44,19" VerticalAlignment="Center" Width="120" Grid.Column="1" Height="43" ClipToBounds="True" Click="btn1_Click"/>
        <PasswordBox x:Name="text2" Grid.Column="1" HorizontalAlignment="Center" Margin="108,296,44,88" VerticalAlignment="Center" Width="239" Height="33"/>

    </Grid>
</Window>
